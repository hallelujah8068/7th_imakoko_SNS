<turbo-frame id="main_area">

<div class="post-container">
  <div class="post-img">
    <% if @post.user && @post.user.user_icon.attached? %>
      <%= image_tag @post.user.user_icon.variant(resize: '48x48'), class: 'user-icon' %>
    <% else %>
      <%= image_tag('prum.png', size: '48x48', class: 'user-icon') %>
    <% end %>
    <table class="post-table">
      <tbody>
        <tr>
          <td>
            <span class="name"><%= @post.user.name %></span>
            <span class="user_name">@<%= @post.user.user_name %></span>
            <span class="timestamp"><%= time_ago_in_japanese_words(@post.created_at) %></span>
          </td>
        </tr>
        <td>
          <%= link_to @post.body %>
        </td>
        <tr>
          <td><%= image_tag('GPS.png', alt: 'gps', class: 'post-image') %></td>
        </tr>
        <tr>
          <td>
            <div class="posts_icon_area">
              <%= link_to '#', class: 'comments_icon' do %>
                <%= image_tag('comment.png', alt: 'Icon', size: '16x15') %>
                <span class="comment-count"><%= @post.comments.count %></span>
              <% end %>
              <%= link_to '#', class: 'nice_icon' do %>
                <span class="icon"><%= image_tag('nice.png', alt: 'Icon') %></span>
              <% end %>
                <%= link_to '#', class: 'destroy_icon' do %>
                  <span class="icon"><%= image_tag('destroy.png', alt: 'Icon') %></span>
                <% end %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<table>
  <tr>
    <%= form_with(model: Comment.new, local: true) do |form| %>
      <div class="form">
        <% if @user && @user.user_icon.attached? %>
          <%= image_tag @user.user_icon.variant(resize: '48x48'), class: 'user-icon' %>
        <% else %>
          <%= image_tag('prum.png', size: '48x48', class: 'user-icon') %>
        <% end %>
        
        <div class="inline-elements">
          <%= form.text_field :body, class: 'reply_body', placeholder: '返信をツイート' %>
        </div>
        <div class="aaa ">
          <%= form.submit '返信', class: 'reply_button' %>
        </div>
      </div>
    <% end %>
  </tr>
</table>
<div class="scroll">
    <% @comment.each do |comment| %>
      <div class="post-container">
      <div class="post-img">
        <% if @post.user && @post.user.user_icon.attached? %>
          <%= image_tag post.user.user_icon.variant(resize: '48x48'), class: 'user-icon' %>
        <% else %>
          <%= image_tag('prum.png', size: '48x48', class: 'user-icon') %>
        <% end %>
        <table class="post-table">
          <tbody>
            <tr>
              <td>
                <span class="name"><%= comment.user.name %></span>
                <span class="user_name">@<%= comment.user.user_name %></span>
                <span class="timestamp"><%= time_ago_in_japanese_words(comment.created_at) %></span>
              </td>
            </tr>
            <td>
              <%= link_to comment.body%>
            </td>
            <tr>
              <td>
                <div class="posts_icon_area">
                  <%= link_to '#', class: 'comments_icon' do %>
                    <%= image_tag('comment.png', alt: 'Icon', size: '16x15') %>
                  <% end %>
                  <%= link_to '#', class: 'nice_icon' do %>
                    <span class="icon"><%= image_tag('nice.png', alt: 'Icon') %></span>
                  <% end %>
                    <%= link_to '#', class: 'destroy_icon' do %>
                      <span class="icon"><%= image_tag('destroy.png', alt: 'Icon') %></span>
                    <% end %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      </div>
    <% end %>
  </div>
<table>
</table>


</turbo-frame>