<div class="side_area">
  <%= render 'users/sidebar' %>
</div>

<div class="main_area">
  <div class ="user_area">
    <h1><%= "デバック用" %></h1>
    <h1><%= "topページマージ後コントローラー、view削除、ルーティング削除" %></h1>

    <div class="profile_area">  
      <%= image_tag('profile_top.png') %>
    </div>
    <div class="thumbnail_area">
      <% if @user && @user.user_icon.attached? %>
        <%= image_tag @user.user_icon %>
      <% else %>
        <%= image_tag('prum.png') %>
      <% end %>
      <div class ="edit_button">
      <% if @user.id.to_s == current_user.id.to_s %>
        <%= button_to 'プロフィールを編集', '#', method: :get, class: 'profile_edit_button' %>
      <% else %>  
        <% if current_user.following?(@user) %>
          <%= button_to 'フォロー解除', unfollow_user_path(@user.id), method: :delete, class: 'unfollow-button' %>
        <% else %>
          <%= button_to 'フォローする', follow_user_path(@user.id), method: :post, class: 'follow-button' %>
        <% end %>
      <% end %>
      </div>
    </div>
    <div class= "user_information">
      <div class ="name_area">
        <h1><%= @user.name %></h1>
        <h1><%= @user.id %></h1>
        <h1><%= current_user.id %></h1>
        <h1><%= @users.count %></h1>
      </div>
      <div class ="email_name">
        <p1>@<%= @user.user_name %></p1>
      </div>
      <div class ="user_description">
        <p2><% if @user.description.present? %>
          <%= @user.description %></p2>
        <% else %>
          <p2>メッセージを設定していません</p2>
        <% end %>
      </div>
      <div class="follow_follower_area">
      </div>
    </div>
  </div>
  <div class="post_area">
      <%= render 'posts/index' %>
  </div>
</div>


