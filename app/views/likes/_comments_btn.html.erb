<% if comment.liked_by?(current_user) %>
  <p>
    <%= link_to comment_like_path(comment.id), data: { "turbo-method": :delete } do %>
      ♥<%= comment.likes.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to comment_likes_path(comment.id), data: { "turbo-method": :post} do %>
      ♡<%= comment.likes.count %>
    <% end %>
  </p>
<% end %>